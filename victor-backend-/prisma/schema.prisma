generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(cuid())
  firstName           String
  lastName            String
  email               String?       @unique @db.VarChar(255)
  phone               String?       @unique @db.VarChar(20)
  passwordHash        String
  profilePicture      String?
  isAdmin             Boolean       @default(false)
  marketingOptIn      Boolean       @default(false)
  termsAccepted       Boolean
  walletBalance       Decimal       @default(0.0)
  resetToken          String?
  resetTokenExpiry    DateTime?
  refreshToken        String?
  orders              Order[]
  userMessages        UserMessage[]
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([email])
  @@index([phone])
}

model Product {
  id          String       @id @default(cuid())
  title       String
  slug        String?      @unique
  description String?
  price       Decimal      @db.Decimal(10, 2)
  discount    Int?
  hsCode      String
  category    String?
  stock       Int          @default(0)
  images      Json?
  featured    Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  orderItems  OrderItem[]

  @@index([category])
  @@index([slug])
}

model Order {
  id            String        @id @default(cuid())
  orderNumber   String        @unique
  user          User          @relation(fields: [userId], references: [id])
  userId        String
  totalAmount   Decimal       @db.Decimal(12, 2)
  currency      String        @default("USD")
  status        OrderStatus   @default(PENDING)
  shippingAddress Json
  billingAddress  Json
  stripePaymentIntentId String?
  stripeSessionId String?
  subOrders     SubOrder[]
  returnRequests ReturnRequest[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@index([createdAt])
}

model SubOrder {
  id            String        @id @default(cuid())
  order         Order         @relation(fields: [orderId], references: [id])
  orderId       String
  items         OrderItem[]
  trackingNumber String?
  status        OrderStatus   @default(PENDING)
  createdAt     DateTime      @default(now())
}

model OrderItem {
  id         String     @id @default(cuid())
  product    Product    @relation(fields: [productId], references: [id])
  productId  String
  subOrder   SubOrder   @relation(fields: [subOrderId], references: [id])
  subOrderId String
  quantity   Int
  unitPrice  Decimal    @db.Decimal(10, 2)
  hsCode     String
}

model ReturnRequest {
  id         String      @id @default(cuid())
  order     Order       @relation(fields: [orderId], references: [id])
  orderId   String
  reason     String
  status     ReturnStatus @default(PENDING)
  images     Json?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([orderId])
  @@index([status])
}

model Blog {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  excerpt       String?    @db.VarChar(500)
  content       String     @db.Text
  featuredImage String?
  authorId      String?
  published     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([slug])
  @@index([published])
  @@index([createdAt])
}

model Project {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  client      String?
  year        String?
  status      String    @default("Completed") // Completed, In Progress
  images      Json?     // Array of image URLs
  features    Json?     // Array of feature strings
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Service {
  id          String     @id @default(cuid())
  title       String
  description String     @db.Text
  iconName    String?    // Icon identifier (e.g., "Cpu", "Code", "Globe")
  features    Json?      // Array of feature strings
  price       String?    // Optional price string (e.g., "$2,999")
  duration    String?    // Optional duration (e.g., "4-6 weeks")
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([active])
  @@index([createdAt])
}

model ContactMessage {
  id          String     @id @default(cuid())
  name        String
  email       String     @db.VarChar(255)
  subject     String?
  message     String     @db.Text
  isRead      Boolean    @default(false)
  archived    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([isRead])
  @@index([archived])
  @@index([createdAt])
}

model UserMessage {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  sender      String     // "Admin", "System", "Support", etc.
  subject     String
  message     String     @db.Text
  isRead      Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

model CurrencyRate {
  id          String    @id @default(cuid())
  base        String
  target      String
  rate        Float
  lastFetched DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PROCESSED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
}
